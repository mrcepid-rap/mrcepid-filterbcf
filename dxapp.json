{
  "name": "mrcepid-filterbcf",
  "title": "FilterBCF",
  "summary": "Filter a target BCF according to parameters set by MRC Epidemiology",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "vcf",
      "label": "input vcf.gz file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "output_vcf",
      "label": "Output filtered vcf",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ],
      "help": ""
    },
    {
      "name": "output_vcf_idx",
      "label": "Output filtered vcf index",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.vcf.gz.tbi"
      ],
      "help": ""
    },
    {
      "name": "site_stats_pre_filter",
      "label": "Output site stats - pre-filter",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tsv.gz"
      ],
      "help": ""
    },
    {
      "name": "site_stats_post_filter",
      "label": "Output site stats - post-filter",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tsv.gz"
      ],
      "help": ""
    },
    {
      "name": "indv_stats_pre_filter",
      "label": "Output indv stats - pre-filter",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tsv.gz"
      ],
      "help": ""
    },
    {
      "name": "indv_stats_post_filter",
      "label": "Output indv stats - post-filter",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tsv.gz"
      ],
      "help": ""
    }
  ],
  "access": {
    "network": [
      "*"
    ]
  },
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 12
      }
    },
    "interpreter": "python3",
    "file": "src/mrcepid-filterbcf.py",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "execDepends": []
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x4"
        }
      }
    }
  }
}
